<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/ros_master_url"
            android:id="@+id/textView"
            android:layout_gravity="left|center_vertical"/>

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRosMasterUrl"
            android:layout_gravity="left|center_vertical"
            />

    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/robot_name"
            android:id="@+id/textView2"
            android:layout_gravity="left|center_vertical"/>

    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/etRobotName"
            android:layout_gravity="left|center_vertical"
            />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/local_april_tags"
        android:id="@+id/localAprilTagsSwitch"
        android:checked="true" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/conectar"
            android:id="@+id/button"
            android:layout_gravity="center"
            android:onClick="okButtonClicked"/>
</LinearLayout>
